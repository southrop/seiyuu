{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [2, 2],
    "array-bracket-spacing": [2, "never"],
    "linebreak-style": [2, "unix"],
    "no-console": 0,
    "object-curly-spacing": [2, "always"],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "space-in-parens": [2, "never"]
  }
}
